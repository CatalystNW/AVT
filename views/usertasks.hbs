      var e = document.getElementsByClassName("pTask");

      for (var v=0; v < e.length; v++) {
        if (! e[v].innerText) {
          e[v].parentNode.style.display = 'none';
        }
      }

      orderTable('orderTable0', 1);
      orderTable('orderTable1', 1);
      orderTable('orderTable1', 1);
      console.log("Sorting Tasks by - Due Date");
    });
</script>


